@page
@model AddUserRoleModel
@{
}

<h1>Update Role to User</h1>
<div class="row">
    <div class="col-md-6">
        <h4>Assign role to @Model.Input.Name</h4>
        <form method="post">
            <partial name="_StatusMessage" 
                model="@Model.StatusMessage" />
            <div class="form-group">
                <label for="choose-role">Role</label>
                <select id="choose-role" multiple
                asp-for="@Model.Input.RoleNames"
                asp-items="@Model.AllRoles"
                >
                </select>
            </div>
            <input type="hidden" asp-for="@Model.Input.Id" />
            <input type="hidden" asp-for="@Model.IsConfirm"/>
            <a class="btn btn-primary" asp-page="./User">Back to User</a>
            <button type="submit" class="btn btn-danger">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}